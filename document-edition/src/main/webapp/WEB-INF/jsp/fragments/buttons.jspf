<portlet:actionURL name="cancel" var="cancelUrl" />


<div class="d-flex justify-content-end">
    <%--Cancel--%>
    <a href="${cancelUrl}" class="btn btn-secondary">
        <span><op:translate key="DOCUMENT_EDITION_ACTION_CANCEL"/></span>
    </a>

    <%--Submit--%>
    <button type="submit" name="save" class="btn btn-primary ml-2">
        <span><op:translate key="DOCUMENT_EDITION_ACTION_${form.creation ? 'CREATE' : 'EDIT'}"/></span>
    </button>
</div>
