<?xml version="1.0" encoding="UTF-8" ?>

<portlet-app
        xmlns="http://java.sun.com/xml/ns/portlet/portlet-app_2_0.xsd"
        xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:schemaLocation="http://java.sun.com/xml/ns/portlet/portlet-app_2_0.xsd http://java.sun.com/xml/ns/portlet/portlet-app_2_0.xsd"
        version="2.0">

    <portlet>
        <description>Forum portlet</description>
        <portlet-name>osivia-services-forum</portlet-name>
        <display-name>Osivia services forum portlet</display-name>
        <portlet-class>org.springframework.web.portlet.DispatcherPortlet</portlet-class>

        <init-param>
            <name>contextClass</name>
            <value>org.osivia.portal.api.portlet.AnnotationPortletApplicationContext</value>
        </init-param>
        <init-param>
            <name>contextConfigLocation</name>
            <value>org.osivia.services.forum.portlet.configuration.ForumPortletConfiguration</value>
        </init-param>

        <expiration-cache>180</expiration-cache>

        <supports>
            <mime-type>text/html</mime-type>
            <portlet-mode>view</portlet-mode>
        </supports>

        <portlet-info>
            <title>Forum portlet</title>
            <short-title>Forum portlet</short-title>
            <keywords>portlet,service,forum</keywords>
        </portlet-info>
    </portlet>


    <portlet>
        <portlet-name>osivia-services-forum-edition</portlet-name>
        <portlet-class>org.springframework.web.portlet.DispatcherPortlet</portlet-class>

        <init-param>
            <name>contextClass</name>
            <value>org.osivia.portal.api.portlet.AnnotationPortletApplicationContext</value>
        </init-param>
        <init-param>
            <name>contextConfigLocation</name>
            <value>org.osivia.services.forum.edition.portlet.configuration.ForumEditionConfiguration</value>
        </init-param>

        <expiration-cache>180</expiration-cache>

        <supports>
            <mime-type>text/html</mime-type>
            <portlet-mode>view</portlet-mode>
        </supports>

        <portlet-info>
            <title>Forum edition</title>
        </portlet-info>
    </portlet>


    <portlet>
        <portlet-name>osivia-services-forum-plugin</portlet-name>
        <portlet-class>org.osivia.services.forum.plugin.ForumPlugin</portlet-class>

        <expiration-cache>180</expiration-cache>

        <supports>
            <mime-type>text/html</mime-type>
        </supports>

        <portlet-info>
            <title>Forum plugin</title>
        </portlet-info>
    </portlet>

</portlet-app>
